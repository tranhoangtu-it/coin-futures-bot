# Binance API Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here
BINANCE_TESTNET=true

# Database Configuration
TIMESCALEDB_URL=postgresql://user:password@localhost:5432/trading_bot
REDIS_URL=redis://localhost:6379/0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=trading_bot_group

# Trading Configuration
DEFAULT_SYMBOL=BTCUSDT
RISK_PERCENTAGE=0.02
MAX_POSITION_SIZE=0.1
MAX_DAILY_DRAWDOWN=0.05

# AI Model Configuration
MODEL_UPDATE_FREQUENCY=3600
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false

# Monitoring Configuration
GRAFANA_URL=http://localhost:3000
PROMETHEUS_URL=http://localhost:9090
PAGERDUTY_API_KEY=your_pagerduty_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Feature Engineering
ENABLE_ORDER_BOOK_FEATURES=true
ENABLE_NLP_FEATURES=true
ENABLE_ONCHAIN_FEATURES=true

# External Data Sources
GLASSNODE_API_KEY=your_glassnode_key_here
SANTIMENT_API_KEY=your_santiment_key_here
CRYPTOPANIC_API_KEY=your_cryptopanic_key_here
